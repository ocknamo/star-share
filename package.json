{
  "name": "star-share",
  "version": "0.0.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --stats-json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint --fix",
    "e2e": "ng e2e",
    "format": "yarn prettier --write .",
    "ci:build": "yarn build --prod",
    "ci:test": "yarn test:coverage",
    "ci:format-and-lint": "yarn lint && yarn format && git diff --exit-code",
    "ci:deploy": "yarn ci:format-and-lint && yarn ci:test && yarn ci:build && yarn deploy",
    "bundle-status": "webpack-bundle-analyzer dist/star-share/stats.json",
    "deploy": "yarn s3-deploy './dist/**' --cwd './dist/' --bucket starshare.ipfscrosspoint.net --gzip html,js,css,json,ico,txt --deleteRemoved"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.0",
    "@angular/cdk": "11.2.0",
    "@angular/common": "~11.2.0",
    "@angular/compiler": "~11.2.0",
    "@angular/core": "~11.2.0",
    "@angular/forms": "~11.2.0",
    "@angular/material": "11.2.0",
    "@angular/platform-browser": "~11.2.0",
    "@angular/platform-browser-dynamic": "~11.2.0",
    "@angular/router": "~11.2.0",
    "global": "^4.4.0",
    "ng-ipfs-service": "^1.0.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "uint8arrays": "^2.1.2",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^11.1.0",
    "@angular-devkit/build-angular": "~0.1102.0",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "~11.2.0",
    "@angular/compiler-cli": "~11.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.11.1",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "codelyzer": "^6.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "jest": "^26.6.3",
    "jest-preset-angular": "^8.3.2",
    "node-polyfill-webpack-plugin": "^1.0.3",
    "prettier": "2.2.1",
    "protractor": "~7.0.0",
    "s3-deploy": "^1.4.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.2",
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
